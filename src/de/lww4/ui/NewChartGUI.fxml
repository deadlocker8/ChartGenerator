<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPaneMain" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.lww4.ui.NewChartController">
   <children>
      <VBox alignment="CENTER" layoutX="14.0" layoutY="25.0" spacing="14.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="25.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Titel:">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="textFieldTitle" prefHeight="25.0" prefWidth="205.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
                  <ColorPicker fx:id="colorPicker">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </ColorPicker>
               </children>
            </HBox>
            <HBox fx:id="hboxChartTypes" alignment="CENTER" prefHeight="25.0" prefWidth="557.0" spacing="14.0" />
            <HBox alignment="CENTER" prefHeight="351.0" prefWidth="772.0" spacing="25.0" VBox.vgrow="ALWAYS">
               <children>
                  <TreeView fx:id="treeView" prefHeight="429.0" prefWidth="243.0" />
                  <StackPane fx:id="stackPaneChart" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="700.0" spacing="50.0">
               <children>
                  <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#save" text="Speichern">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#cancel" text="Abbrechen">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
